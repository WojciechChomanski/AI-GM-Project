{
  "$id": "schemas/stonewarden_kits.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Stonewarden Starter Kits",
  "type": "object",
  "properties": {
    "version": { "type": "string" },
    "kits": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "contents"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9_\\-]+$" },
          "name": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "weight_kg": { "type": "number" },
          "cost": { "type": "integer" },
          "notes": { "type": "string" },
          "contents": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["item_id", "qty"],
              "additionalProperties": false,
              "properties": {
                "item_id": { "type": "string" },
                "qty": { "type": "integer", "minimum": 1 },
                "weight_kg": { "type": "number" },
                "cost": { "type": "integer" },
                "notes": { "type": "string" }
              }
            }
          }
        }
      }
    }
  },
  "required": ["kits"],
  "additionalProperties": false
}
